<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.BottomTabScreen">

    <FrameLayout
        android:id="@+id/fragment_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_bottom_nav"
        app:itemTextColor="@color/color_bottom_tab"
        app:itemIconSize="20dp"
        style="@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface"
        android:background="#fff"
        app:itemTextAppearanceActive="@style/style_text_bottom_tab"
        app:itemTextAppearanceInactive="@style/style_text_bottom_tab"
        app:labelVisibilityMode="labeled"/>
</LinearLayout>