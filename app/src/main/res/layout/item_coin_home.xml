<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/linear_layout_item_coin_home"
    android:layout_marginTop="10sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_symbol_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_black"
            android:fontFamily="@font/anuphan_semi_bold"
            android:text="BTC"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_blue"
            android:textSize="8sp"
            android:text="/USDT"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:textSize="8sp"
            android:layout_marginLeft="5sp"
            android:text="10x"
            android:fontFamily="@font/anuphan_semi_bold"
            style="@style/background_gray3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_close_price_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_black"
            android:fontFamily="@font/myfont17_regular"
            android:text="42.903,5"/>

        <TextView
            android:id="@+id/tv_close_price_home2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_blue"
            android:textSize="10sp"
            android:fontFamily="@font/myfont24_regular"
            android:text="42.903,5 $"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_percent_coin_home"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_weight="0.5"
        app:cardCornerRadius="5sp"
        android:backgroundTint="@color/green_can">
        <TextView
            android:id="@+id/tv_percent_coin_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="+5.6%"
            android:layout_gravity="center"
            android:fontFamily="@font/myfont24_regular"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>